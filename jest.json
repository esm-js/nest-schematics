{
  "moduleFileExtensions": ["js", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".(test|spec).ts$",
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", { "useESM": true }]
  },
  "coverageDirectory": "./coverage",
  "verbose": true,
  "bail": true,
  "testPathIgnorePatterns": ["/node_modules/", "files"]
}
